{
    "name": "semperton/skeleton",
    "description": "Semperton application template.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Johannes Rabausch",
            "email": "mail@jrabausch.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "test": "phpunit tests",
        "check": "psalm --no-cache",
        "server": "php -S localhost:8080 -t ./public ./public/index.php"
    },
    "require": {
        "php": ">=7.4",
        "nyholm/psr7": "^1.5",
        "nyholm/psr7-server": "^1.0",
        "semperton/container": "^2.2",
        "semperton/framework": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.23"
    }
}
